@model MyCV_Demo.Models.GalleryInputModel
<h1>Upload Image</h1>

<form asp-action="UploadImage" method="post" enctype="multipart/form-data">
    <div>
        <label>Title</label>
        <input asp-for="Title" />
    </div>
    <div>
        <label>Description</label>
        <textarea asp-for="Description"></textarea>
    </div>

    <div>
        <label>Image file</label>
        <input asp-for="File" type="file" accept="image/*" />
        <span asp-validation-for="File"></span>
    </div>

    <button type="submit">Upload</button>
</form>

<p><a asp-action="Index">Back to gallery</a></p>